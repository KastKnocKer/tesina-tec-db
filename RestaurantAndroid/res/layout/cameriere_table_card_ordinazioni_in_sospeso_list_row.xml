<?xml version="1.0" encoding="utf-8"?>

<!-- Riga della ListView che mostra il Conto al cameriere -->  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
	
    		 <!-- Nome Ordinazione -->
	         <TextView
	             android:id="@+id/textView_ordinazioniInSopesoList_nomeOrdinazione"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent"
	             android:layout_weight="1"
	             android:layout_margin="1dp"
	             android:padding="5dp"
	             android:text="Penne all'amatriciana con capperi e rucola"
	             android:gravity="center_vertical|center_horizontal"
	             android:background="#111111"
	             android:textSize="16dp" />
	
	         <!-- Quantity -->
	         <TextView
	             android:id="@+id/textView_ordinazioniInSopesoList_quantity"
	             android:layout_width="50dp"
	             android:layout_height="fill_parent"
	             android:layout_margin="1dp"
	             android:padding="5dp"
	             android:text="3"
	             android:gravity="center_vertical|center_horizontal"
	             android:background="#111111"
	             android:textSize="16dp" />
	
	         <!-- Stato -->
	         <TextView
	             android:id="@+id/textView_ordinazioniInSopesoList_stato"
	             android:layout_width="120dp"
	             android:layout_height="fill_parent"
	             android:layout_margin="1dp"
	             android:padding="5dp"
	             android:gravity="center_vertical|center_horizontal"
	             android:text="Inviata in cucina"
	             android:background="#111111"
	             android:textSize="16dp" />

</LinearLayout>


      
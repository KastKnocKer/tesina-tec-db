<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restaurant.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_coffecup"
        android:label="@string/app_name"
        android:name=".RestaurantApplication">
        
        <service android:name="com.restaurant.android.cameriere.activities.TablesListService"/>
        <service android:enabled="true" android:name="com.restaurant.android.cameriere.notifiche.NotificationUpdaterService" />
         
        <activity
            android:label="@string/app_name"
            android:name=".LoginActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:label="@string/app_name"
            android:name=".cameriere.activities.HomeActivity" 
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
         
        <activity
            android:label="@string/app_name"
            android:name=".cameriere.activities.TablesListActivity" >
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".cameriere.notifiche.NotificationActivity" >
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".cameriere.activities.TableCardActivity" >
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".cameriere.activities.GestioneOrdinazioneActivity" >
        </activity>
        
       	<activity
            android:label="@string/app_name"
            android:name=".cameriere.activities.MenuListActivity" >
        </activity>
        
       	    <activity
            android:label="@string/app_name"
            android:name=".cameriere.prenotazioni.PrenotationsListActivity" >
        </activity>
    
    </application>
   <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
   <uses-permission android:name="android.permission.INTERNET" />
   <uses-permission android:name="android.permission.VIBRATE" />
</manifest>